@import '../common/index.wxss';

.van-swipe-cell {
    position: relative;
    overflow: hidden
}

.van-swipe-cell__left,
.van-swipe-cell__right {
    position: absolute;
    top: 0;
    height: 100%
}

.van-swipe-cell__left {
    left: 0;
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0)
}

.van-swipe-cell__right {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 30rpx;
    background-color:#e2eaee;
    color:#5483a0;
    right: 0;
    -webkit-transform: translate3d(100%, 0, 0);
    transform: translate3d(100%, 0, 0)
}