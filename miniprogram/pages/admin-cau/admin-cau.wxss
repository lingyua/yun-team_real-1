
.userinfo {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 12vw;

}

.userinfo-avatar {
    width: 10vw;
    height: 10vw;
    margin: 0 0 0 4vw;
    border-radius: 4px;
    overflow: hidden;
}

.userinfo-nickname {
    font-size: 15px;
    height: 10vw;
    line-height: 10vw;
    padding: 0 0 0 3vw;
}

.push {
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 14px;

}

.item {
    width: 93vw;
    padding: 1vw 0 1vw 1vw;
}


.pickong {
    width: 192rpx;
    height: 192rpx;
}

.backnews {
    height: 90vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 16px;
    background-color: rgb(251, 251, 251);
}

.loading{
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: rgb(251,251,251);
}

.newsdown {
    padding-top: 2vw;
    padding-bottom:2vw;
    text-align: center;
    position: relative;
    width: 100vw;
    font-size: 16px;
    color:#ccc;
}


