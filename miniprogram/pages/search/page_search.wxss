/* miniprogram/pages/search/page_search.wxss */
.searchbox{
    width: 100vw;
    height: 20vh;
    display: flex;
    align-items: center;
    justify-content: center;
    /* background-color: rgb(251, 251, 251); */
}

.head {
   
    display: flex;
    flex-direction: column;
    align-items: center;
    font-size: 13px;
    text-align: center;
    
}

.logo {
    width: 17vw;
    height: 17vw;
}

.searchtab{
    height:15vw;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 13px;
    /* background-color: rgb(251, 251, 251); */
}

.haspush {
    height:4vh;
    width: 36vw;
    padding:0 0 0 2vw;
    display: flex;
    justify-content: space-around;
    align-items: center;
    font-size: 15px;
}


.userinfo {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    height: 15vw;

}

.userinfo-avatar {
    width: 10vw;
    height: 10vw;
    padding: 0 0 0 4vw;
    border-radius: 3px;
    overflow: hidden;
}

.headinfo{
    height:10vw;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.userinfo-nickname {
    font-size: 13px;
    padding: 0 0 0 2vw;
    color: #333366;
}

.nowtime{
    font-size: 12px;
    padding: 0 0 0 2vw;
    color: #999;
}

.push {
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
    /* align-items: center; */
    font-size: 14px;
    padding:1vw 0vw 1vw 0vw;
}

.item {
    width: 80vw;
    padding: 1vw 0 1vw 16vw;
}

.loading{
    display: flex;
    justify-content: center;
    align-items: center;
    /* background-color: #fcfcee; */
}

.newsdown {
    padding-top: 2vw;
    padding-bottom:2vw;
    text-align: center;
    position: relative;
    width: 100vw;
    font-size: 12px;
    color:#ccc;
}

.backnews {
    /* height: 70vh; */
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-size: 14px;
    /* background-color: rgb(251, 251, 251); */
}
.pickong {
    width: 192rpx;
    height: 192rpx;
}